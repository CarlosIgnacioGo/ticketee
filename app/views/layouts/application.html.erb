
<html>
<head>
<title>
  <% if content_for?(:title) %>
    <%= yield(:title) %>
  <% else %>
    Ticketee
  <% end %>
</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, value| %>
  <div class='flash' id='<%= key %>'>
    <%= value %>
  </div>
<% end %>
<div style="background:blue;color:white;padding:3px 20px;">
	<%= flash[:hola] %> 
</div>
<%= yield %>

<%	n = "1" %>
<% if is_a_number?(n) == true%>
	<p>Su string es un numero</p>
<%else%>
	<p>Su string son palabras</p>
<% end %>
</body>
</html>

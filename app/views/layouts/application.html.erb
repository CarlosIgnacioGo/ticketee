
<html>
<head>
<title>
  <% if content_for?(:title) %>
    <%= yield(:title) %>
  <% else %>
    Ticketee
  <% end %>
</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, value| %>
  <div class='flash' id='<%= key %>'>
    <%= value %>
  </div>
<% end %>
<div style="background:blue;color:white;padding:3px 20px;">
	<%= flash[:hola] %> 
</div>
<%= link_to "New Project", new_project_path %>

<% unless user_signed_in? %>
  <%= link_to "Registrate", new_user_registration_path %>
  <%= link_to "Inicia session", new_user_session_path %>
<%end%>

<% if user_signed_in? %>
  <%= current_user.email %>
  <%= link_to "Cerrar session", destroy_user_session_path, method: :delete %>
<%end%>

<%= yield %>


</body>
</html>
